# Django Settings
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database
# For development (SQLite): leave DATABASE_URL empty or comment out
# For production (PostgreSQL): DATABASE_URL=postgresql://user:password@host:port/dbname
DATABASE_URL=

# CORS Settings
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# Media & Static Files
MEDIA_ROOT=media
STATIC_ROOT=staticfiles

# AWS S3 Storage (Production only - leave empty for local development)
USE_S3=False
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_STORAGE_BUCKET_NAME=
AWS_S3_REGION_NAME=us-east-1
AWS_S3_CUSTOM_DOMAIN=

# File Upload Limits
MAX_UPLOAD_SIZE=52428800
# 50MB in bytes

# Rate Limiting
RATELIMIT_ENABLE=True

# Email (for notifications - optional)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
DEFAULT_FROM_EMAIL=noreply@isokodocs.com
